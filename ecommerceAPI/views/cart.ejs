                          <form
                            action="/checkout"
                            method="post"
                            class="mt-4 frm"
                            novalidate
                          >
                            <div class="form-floating mb-4">
                              <input
                                type="text"
                                id="floatingName"
                                class="form-control form-control-lg"
                                placeholder="Cardholder's Name"
                                required
                              />
                              <label for="floatingName"
                                >Cardholder's Name</label
                              >
                            </div>

                            <div class="form-floating mb-4">
                              <input
                                type="number"
                                id="floatingNumber"
                                class="form-control form-control-lg"
                                placeholder="1234 5678 9012 3457"
                                min="1111111111111111"
                                max="9999999999999999"
                                onkeypress="if(this.value.length == 16) return false;"
                                required
                              />
                              <label class="form-label" for="typeText"
                                >Card Number</label
                              >
                            </div>

                            <div class="row mb-4">
                              <div class="col-6">
                                <div class="form-floating">
                                  <input
                                    type="date"
                                    id="floatingDate"
                                    class="form-control form-control-lg"
                                    placeholder="DD/MM/YYYY"
                                    required
                                  />
                                  <label class="form-label" for="floatingDate"
                                    >Expiration Date</label
                                  >
                                </div>
                              </div>
                              <div class="col-6">
                                <div class="form-floating">
                                  <input
                                    type="password"
                                    id="typeText"
                                    class="form-control form-control-lg"
                                    placeholder="&#9679;&#9679;&#9679;"
                                    minlength="3"
                                    maxlength="3"
                                    required
                                  />
                                  <label class="form-label" for="typeText"
                                    >CVC</label
                                  >
                                </div>
                              </div>
                            </div>

                            <div class="form-floating mb-4">
                              <input
                                type="email"
                                id="floatingMail"
                                class="form-control form-control-lg"
                                placeholder="Email"
                                required
                              />
                              <label for="floatingMail">Email</label>
                            </div>

                            <div class="form-floating mb-4">
                              <input
                                type="text"
                                id="floatingAddress"
                                class="form-control form-control-lg"
                                placeholder="Address"
                                name="address"
                                required
                              />
                              <label for="floatingAddress">Address</label>
                            </div>

                            <div
                              class="d-flex justify-content-between text-white"
                            >
                              <p class="mb-2">Subtotal</p>
                              <p class="mb-2">BDT<%=total%></p>
                            </div>

                            <div
                              class="d-flex justify-content-between text-white"
                            >
                              <p class="mb-2">Shipping</p>
                              <p class="mb-2">BDT80.00</p>
                            </div>

                            <div
                              class="d-flex justify-content-between mb-4 text-white"
                            >
                              <p class="mb-2">Total(Incl. taxes)</p>
                              <p class="mb-2">BDT<%=total+80%></p>
                            </div>

                            <div class="d-flex">
                              <button
                                type="submit"
                                class="btn btn-info btn-lg add"
                              >
                                <div
                                  class="d-flex justify-content-between text-white"
                                >
                                  Place Order
                                </div>
                              </button>
                            </div>
                          </form>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </main>

