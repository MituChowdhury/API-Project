      crossorigin="anonymous"
    ></script>
    <script>
      const form = document.querySelector(".frm");

      form.addEventListener("submit", (event) => {
        if (!form.checkValidity()) {
          event.preventDefault();
        }

        form.classList.add("was-validated");
      });
    </script>
