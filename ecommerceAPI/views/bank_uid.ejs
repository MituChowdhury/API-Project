    <main>
      <div class="login">
        <form action="/bankRegister" method="post" novalidate class="buid">
          <svg
            class="logsvg"
            xmlns="http://www.w3.org/2000/svg"
            height="1em"
            viewBox="0 0 576 512"
          >
            <style>
              svg {
                fill: #ffffff;
              }
            </style>
            <path
              d="M249.6 471.5c10.8 3.8 22.4-4.1 22.4-15.5V78.6c0-4.2-1.6-8.4-5-11C247.4 52 202.4 32 144 32C93.5 32 46.3 45.3 18.1 56.1C6.8 60.5 0 71.7 0 83.8V454.1c0 11.9 12.8 20.2 24.1 16.5C55.6 460.1 105.5 448 144 448c33.9 0 79 14 105.6 23.5zm76.8 0C353 462 398.1 448 432 448c38.5 0 88.4 12.1 119.9 22.6c11.3 3.8 24.1-4.6 24.1-16.5V83.8c0-12.1-6.8-23.3-18.1-27.6C529.7 45.3 482.5 32 432 32c-58.4 0-103.4 20-123 35.6c-3.3 2.6-5 6.8-5 11V456c0 11.4 11.7 19.3 22.4 15.5z"
            />
          </svg>
          <h3>Bank UID Registration</h3>
          <div class="form-floating mb-3 inp">
            <input
              type="number"
              class="form-control"
              id="floatingInput"
              placeholder="numberInput"
              name="bankuid"
              min="1111111111111111"
              max="9999999999999999"
              onkeypress="if(this.value.length == 16) return false;"
              required
            />
            <label for="floatingInput">Bank User Identification No.</label>
          </div>
          <div class="form-floating inp">
            <input
              name="password"
              type="password"
              class="form-control"
              id="floatingPassword"
              placeholder="Password"
              required
            />
            <label for="floatingPassword">Password</label>
          </div>
          <button class="btn btn-primary" type="submit" name="id" value="val">
            Proceed
          </button>
          <p>
            Your Bank UID is required to proceed with your future orders and
            payments
          </p>
          <p>&copy; 2023 | Turn the page</p>
        </form>
      </div>
    </main>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
      crossorigin="anonymous"
    ></script>
    <script>
      const form = document.querySelector("form");

      form.addEventListener("submit", (event) => {
        if (!form.checkValidity()) {
          event.preventDefault();
        }

        form.classList.add("was-validated");
      });
    </script>
